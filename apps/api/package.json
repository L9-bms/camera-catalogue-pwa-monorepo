{
    "name": "api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "test": "bun run test:unit && bun run coverage",
        "test:unit": "bun test",
        "coverage": "bun test --coverage",
        "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts && tsc",
        "docker": "cd ../.. && docker build -t mono-api -f ./apps/api/Dockerfile ."
    },
    "dependencies": {
        "@elysiajs/cors": "^1.4.0",
        "@elysiajs/openapi": "^1.4.11",
        "@elysiajs/opentelemetry": "1.4.6",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "drizzle-typebox": "^0.3.3",
        "elysia": "catalog:",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/bun": "^1.3.4",
        "@types/pg": "^8.16.0",
        "config": "workspace:*",
        "drizzle-kit": "^0.31.8",
        "eslint": "^9.39.2",
        "tsx": "^4.21.0"
    },
    "overrides": {
        "@sinclair/typebox": "0.34.0"
    }
}
