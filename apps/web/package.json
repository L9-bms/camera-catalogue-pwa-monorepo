{
    "name": "web",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack --experimental-https",
        "build": "next build && cp -r .next/static .next/standalone/apps/web/.next/static && cp -r public .next/standalone/apps/web/public",
        "start": "next start",
        "lint": "next lint",
        "docker": "cd ../.. && docker build -t mono-web -f ./apps/web/Dockerfile .",
        "test": "bun run test:unit && bun run coverage && bun run test:e2e",
        "test:unit": "vitest run",
        "coverage": "vitest run --coverage",
        "test:e2e": "playwright test"
    },
    "dependencies": {
        "next": "16.0.10",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "usehooks-ts": "^3.1.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@tailwindcss/postcss": "^4.1.18",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^25.0.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/ui": "4.0.15",
        "config": "workspace:*",
        "daisyui": "^5.5.13",
        "eslint": "^9.39.2",
        "jsdom": "^27.3.0",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "vite-tsconfig-paths": "^6.0.3",
        "vitest": "^4.0.15"
    }
}
